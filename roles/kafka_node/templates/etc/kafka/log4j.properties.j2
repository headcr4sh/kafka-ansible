log4j.rootLogger=INFO, stderr

log4j.appender.stdout=org.apache.log4j.ConsoleAppender
log4j.appender.stdout.Target=System.out
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
log4j.appender.stdout.layout.ConversionPattern=[%d] %p %m (%c)%n

log4j.appender.stderr=org.apache.log4j.ConsoleAppender
log4j.appender.stderr.Target=System.err
log4j.appender.stderr.layout=org.apache.log4j.PatternLayout
log4j.appender.stderr.layout.ConversionPattern=[%d] %p %m (%c)%n

log4j.logger.kafka=INFO
log4j.logger.org.apache.kafka=INFO

log4j.logger.kafka.request.logger=WARN
log4j.additivity.kafka.request.logger=false

#log4j.logger.kafka.network.Processor=TRACE
#log4j.logger.kafka.server.KafkaApis=TRACE
#log4j.additivity.kafka.server.KafkaApis=false
log4j.logger.kafka.network.RequestChannel$=WARN
log4j.additivity.kafka.network.RequestChannel$=false

log4j.logger.org.apache.kafka.controller=INFO
log4j.additivity.org.apache.kafka.controller=false

log4j.logger.kafka.controller=TRACE
log4j.additivity.kafka.controller=false

log4j.logger.kafka.log.LogCleaner=INFO
log4j.additivity.kafka.log.LogCleaner=false

log4j.logger.state.change.logger=INFO
log4j.additivity.state.change.logger=false

log4j.logger.kafka.authorizer.logger=INFO
log4j.additivity.kafka.authorizer.logger=false

